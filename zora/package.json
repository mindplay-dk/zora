{
  "name": "zora",
  "version": "5.0.0",
  "description": "the lightest yet the fastest javascript testing library",
  "main": "./dist/index.cjs",
  "keywords": [
    "test",
    "testing",
    "unit",
    "tap",
    "assertion",
    "assert",
    "tdd",
    "bdd",
    "ava",
    "tape",
    "jest",
    "uvu",
    "mocha"
  ],
  "type": "module",
  "types": "dist/zora.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./harness": {
      "import": "./dist/harness.js",
      "require": "./dist/harness.cjs"
    },
    "./cjs": "./dist/index.cjs",
    "./es": "./dist/index.js"
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "build:types": "rollup -c rollup-types.js",
    "build:js": "rollup -c rollup.js",
    "build": "npm run build:js && npm run build:types",
    "build:watch": "rollup -w -c rollup.js",
    "test": "node test/run.js"
  },
  "files": [
    "dist"
  ],
  "author": "@lorenzofox3 <Laurent RENARD>",
  "license": "MIT"
}
